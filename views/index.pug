extends layout

block content
  .main-container
    .cloud-image
        img(src='/images/successCloudNew.svg')
    .content
        .tweet-container
             a(href='http://twitter.com/intent/tweet/?text=I%20just%20created%20a%20new%20Node.js%20Express%20website%20on%20Azure%20using%20Azure%20DevOps%20Project&hashtags=AzureDevOpsProject%2CVSTS%20%40Azure%20%40VSTS')
                img(src='/images/tweetThis.svg')    
        .content-body
            .success-text
                p Success!
            .description 
                p GitHub + Azure Actions Rocks!
            .description
                p Your Node.js Express app is up and running on Azure!
    
  .row
    .col-md-4
      h2 Get started right away
      p Clone your code repository and start developing your application on IDE of your choice
      p
        a.btn.btn-default(href='https://go.microsoft.com/fwlink/?linkid=862409') Learn more &raquo;
    .col-md-4
      h2 Continuous Delivery
      p View your pipelines on GitHub and customize it as per your needs
      p
        a.btn.btn-default(href='https://go.microsoft.com/fwlink/?linkid=862410') Learn more &raquo;
    .col-md-4
      h2 GitHub Actions
      p Learn more about all you can do with GitHub actions by visiting the documentation
      p
        a.btn.btn-default(href='https://github.com/Azure/actions') Learn more &raquo;
